@model CVOnline.Web.Models.Domain.CV

@{
    ViewData["Title"] = "Xem CV được chia sẻ";
}

<div class="container mt-4">
    <h2>Xem CV: @Model.Title</h2>

    <div class="cv-container">
        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
        {
            <div class="photo-container">
                <img src="@Model.PhotoUrl" alt="Ảnh cá nhân" style="max-width: 150px;" />
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Content))
        {
            @Html.Raw(Model.Content)
        }
        else if (Model.Template != null)
        {
            @Html.Raw(Model.Template.HtmlTemplate)
        }
        else
        {
            <p>Không tìm thấy nội dung hoặc template cho CV này.</p>
        }
    </div>

    <a href="javascript:history.back()" class="btn btn-secondary mt-3">Quay lại</a>
</div>

<style>
    @Html.Raw(Model.Template?.CssTemplate)
    .cv-container {
        padding: 20px;
        background: #fff;
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }
    .photo-container {
        text-align: center;
        margin-bottom: 20px;
    }
</style>