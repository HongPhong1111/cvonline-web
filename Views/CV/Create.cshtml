@model CVOnline.Web.Models.ViewModels.CreateCVViewModel
@{
    ViewData["Title"] = "Tạo CV mới";
}

<div class="container">
    <h1 class="mb-4">Tạo CV mới với mẫu @Model.TemplateName</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@Model.PreviewImageUrl" class="card-img-top" alt="@Model.TemplateName">
                <div class="card-body">
                    <h5 class="card-title">@Model.TemplateName</h5>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Nhập thông tin CV của bạn</h5>
                </div>
                <div class="card-body">
                    <form id="createCVForm" enctype="multipart/form-data">
                        <input type="hidden" name="TemplateId" value="@Model.TemplateId" />
                        <input type="hidden" name="TemplateName" value="@Model.TemplateName" />
                        <input type="hidden" name="PreviewImageUrl" value="@Model.PreviewImageUrl" />
                        <input type="hidden" name="HtmlTemplate" value="@Model.HtmlTemplate" />
                        <input type="hidden" name="CssTemplate" value="@Model.CssTemplate" />
                        <input type="hidden" name="FullName" value="@Model.FullName" />
                        <input type="hidden" name="JobTitle" value="@Model.JobTitle" />
                        <input type="hidden" name="BirthDate" value="@Model.BirthDate" />
                        <input type="hidden" name="Gender" value="@Model.Gender" />
                        <input type="hidden" name="PhoneNumber" value="@Model.PhoneNumber" />
                        <input type="hidden" name="Email" value="@Model.Email" />
                        <input type="hidden" name="Address" value="@Model.Address" />
                        <input type="hidden" name="Website" value="@Model.Website" />
                        <input type="hidden" name="PhotoUrl" value="@Model.PhotoUrl" />

                        <div class="form-group mb-3">
                            <label for="Title" class="control-label">Tiêu đề CV</label>
                            <input type="text" name="Title" class="form-control"
                                placeholder="Ví dụ: CV Xin việc IT - Nguyễn Văn A" required />
                            <span class="text-danger" id="TitleError"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Photo" class="control-label">Tải ảnh cá nhân</label>
                            <input type="file" name="Photo" id="photoInput" class="form-control" accept="image/*" />
                            <img id="photoPreview" src="" alt="Ảnh cá nhân" style="display: none; max-width: 150px; margin-top: 10px;" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Nội dung CV</label>
                            <div id="cv-content" contenteditable="true" class="cv-editor">
                                <div class="photo-container"><img id="cvPhoto" src="" alt="Ảnh cá nhân" style="max-width: 150px; display: none;" /></div>
                                @Html.Raw(Model.HtmlTemplate
                                    .Replace("{FullName}", Model.FullName)
                                    .Replace("{JobTitle}", Model.JobTitle)
                                    .Replace("{BirthDate}", Model.BirthDate)
                                    .Replace("{Gender}", Model.Gender)
                                    .Replace("{PhoneNumber}", Model.PhoneNumber)
                                    .Replace("{Email}", Model.Email)
                                    .Replace("{Address}", Model.Address)
                                    .Replace("{Website}", Model.Website))
                            </div>
                            <span class="text-danger" id="ContentError"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="Templates" class="btn btn-secondary">Quay lại</a>
                            <button type="button" id="previewBtn" class="btn btn-info">Xem trước</button>
                            <button type="submit" class="btn btn-success">Lưu CV</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="previewModalLabel">Xem trước CV</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="previewContent"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @Html.Raw(Model.CssTemplate)
    .cv-editor {
        border: 1px solid #ced4da;
        padding: 20px;
        min-height: 700px;
        overflow-y: auto;
        background: #fff;
        line-height: 1.6;
        font-size: 14px;
    }
    .cv-editor:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    .photo-container {
        margin-bottom: 20px;
        text-align: center;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Xử lý tải ảnh và hiển thị preview
            $('#photoInput').on('change', function (e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (event) {
                        $('#photoPreview').attr('src', event.target.result).show();
                        $('#cvPhoto').attr('src', event.target.result).show();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Xử lý nút Xem trước
            $('#previewBtn').on('click', function () {
                const content = $('#cv-content').html();
                $('#previewContent').html(content);
                $('#previewModal').modal('show');
            });

            // Xử lý submit form
            $('#createCVForm').on('submit', function (e) {
                e.preventDefault();

                const formData = new FormData(this);
                const content = $('#cv-content').html();
                if (!content || content.trim() === '') {
                    $('#ContentError').text('Nội dung CV là bắt buộc');
                    return;
                }
                formData.append('Content', content);

                // Kiểm tra tiêu đề
                const title = $('input[name="Title"]').val();
                if (!title || title.trim() === '') {
                    $('#TitleError').text('Tiêu đề CV là bắt buộc');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("Create", "CV")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            window.location.href = '/CV/Index';
                        } else {
                            alert("Lỗi: " + response.message);
                        }
                    },
                    error: function (xhr) {
                        alert("Đã có lỗi xảy ra khi lưu CV: " + (xhr.responseText || "Lỗi không xác định"));
                    }
                });
            });
        });
    </script>
}