@model IEnumerable<CVOnline.Web.Models.Domain.CVTemplate>
@{
    ViewData["Title"] = "Danh sách mẫu CV";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold mb-0">Danh sách mẫu CV</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Quay lại danh sách CV
        </a>
    </div>

    <!-- Form tìm kiếm -->
    <form asp-action="Templates" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên hoặc danh mục..." value="@ViewBag.SearchString" />
            <button type="submit" class="btn btn-primary"><i class="bi bi-search me-1"></i>Tìm</button>
        </div>
    </form>

    <div class="row g-4">
        @foreach (var template in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="@template.PreviewImageUrl" class="card-img-top" alt="@template.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@template.Name</h5>
                        <p class="card-text">Danh mục: @template.Category</p>
                        <p class="card-text">Số lần sử dụng: @template.UsageCount</p>
                        <a asp-action="Create" asp-route-templateId="@template.Id" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Sử dụng mẫu này
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>